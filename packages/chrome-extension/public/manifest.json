{
  "name": "Recoil Inspector",
  "version": "0.0.2",
  "devtools_page": "./devtools.html",
  "description": "A stable, and easy-to-use recoil devtool.",
  "manifest_version": 3,
  "content_security_policy": {
    "extension_pages": "script-src 'self' ; object-src 'self'"
  },
  "icons": {
    "16": "assets/recoil-inspector.png",
    "48": "assets/recoil-inspector.png",
    "128": "assets/recoil-inspector.png"
  },
  "permissions": ["storage"],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content-script.js"]
    }
  ]
}
